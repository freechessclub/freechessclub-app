{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "quotemark" : [
            true,
            "single",
            "avoid-escape"
        ],
        "file-header" : [
            true,
            "Copyright \\d{4} Free Chess Club."
        ],
        "object-literal-sort-keys": false,
        "indent": [
            true,
            "spaces"
        ],
	"no-bitwise": false
    },
    "rulesDirectory": []
}
